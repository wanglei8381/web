<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>学生信息管理平台</title>
    <!-- Bootstrap core CSS -->
    <link href="/sys/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/sys/signin.css" rel="stylesheet">
    <link href="/sys/common.css" rel="stylesheet">
</head>

<body>

<div class="container">
    <form class="form-signin">
        <h2 class="form-signin-heading">学生信息管理平台</h2>
        <input type="text" id="inputUsername" class="form-control" name="stid" placeholder="用户名" required autofocus>
        <input type="password" id="inputPassword" class="form-control" name="password" placeholder="密码" required>
        <button class="btn btn-lg btn-primary btn-block" id="submit" type="button">登录</button>
    </form>
</div>
<!-- /container -->

<!-- jQuery文件。务必在bootstrap.min.js 之前引入 -->
<script src="/sys/jquery.min.js"></script>
<script src="/sys/common.js"></script>
<script>

    var login = function () {
        var userName = $.trim($('input[name=stid]').val());
        var passWord = $.trim($('input[name=password]').val());
        if(!userName){
            $.warning('请输入用户名');
            return;
        }
        if(!passWord){
            $.warning('请输入密码');
            return;
        }
        my.ajax({
            url: '/sys/login',
            data: $("form").serialize(),
            success: function () {
                window.location = '/sys';
            }
        });

    };

    $(document).bind('keyup', function (event) {
        if (event.keyCode == "13") {
            login();
        }
    });

    $('#submit').click(function () {
        login();
    });
</script>
</body>
</html>
