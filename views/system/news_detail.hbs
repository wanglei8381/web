<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-7">
                <h4>新闻详情</h4>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <lable class="col-sm-2 control-label">新闻标题</lable>
                <div class="col-sm-10 u-word">
                    {{title}}
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">发布时间</lable>
                <div class="col-sm-10 u-word" id="createdAt">
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">新闻描述</lable>
                <div class="col-sm-10 u-word">
                    {{description}}
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">发布范围</lable>
                <div class="col-sm-10 u-word" id="scope">
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">新闻状态</lable>
                <div class="col-sm-10 u-word" id="news_status">

                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">新闻内容</lable>
                <div class="col-sm-9 u-word u-border">
                    {{{content}}}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <a href="/sys/news" class="btn btn-default col-sm-4 col-sm-offset-2">返回</a>
                </div>
            </div>
        </form>
    </div>
</div>

{{#extend "scripts"}}
    <!-- 实例化编辑器 -->
    <script type="text/javascript">
        $(function () {
            var statusSt = ['未发布', '已发布', '关闭'];
            $('#news_status').html(statusSt['{{status}}']);
            var scopeSt = ['公开', '不公开'];
            $('#scope').html(scopeSt['{{scope}}']);
            $('#createdAt').html(my.toDateString('{{createdAt}}'));
        });
    </script>

{{/extend}}