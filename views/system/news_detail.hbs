<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-7">
                <h4>新闻详情</h4>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <lable class="col-sm-2 control-label">新闻标题</lable>
                <div class="col-sm-10 u-word">
                    {{title}}
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">新闻描述</lable>
                <div class="col-sm-10 u-word">
                    {{description}}
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">新闻图片</lable>
                <div class="col-sm-10 u-word">
                    {{imgUrl}}
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">发布范围</lable>
                <div class="col-sm-10 u-word">
                    【<span id="scope"></span>】&nbsp;&nbsp;&nbsp;&nbsp;<span id="collegeVal"></span>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">新闻状态</lable>
                <div class="col-sm-10 u-word" id="news_status">

                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">新闻内容</lable>
                <div class="col-sm-9 u-word u-border">
                    {{{content}}}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <a href="/sys/news" class="btn btn-default col-sm-4 col-sm-offset-2">返回</a>
                </div>
            </div>
        </form>
    </div>
</div>

{{#extend "scripts"}}
    <!-- 实例化编辑器 -->
    <script type="text/javascript">
        $(function () {
            var statusSt = ['未发布', '已发布', '关闭'];
            $('#news_status').html(statusSt['{{status}}']);
            var scopeSt = ['全部', '院系'];
            $('#scope').html(scopeSt['{{scope}}']);
            if('{{collegeIds}}'){
                var collegeSt = ['计算机系', '金融院系','等等等'];
                //collegeIds
                var collegeLen = {{collegeIds.length}};
                for(var i = 0; i<collegeLen; i++ ){

                }
                $('#collegeVal').html(collegeSt[0]);
            }
        });
    </script>

{{/extend}}