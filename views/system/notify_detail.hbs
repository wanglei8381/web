<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-7">
                <h4>通知详情</h4>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <lable class="col-sm-2 control-label">通知标题</lable>
                <div class="col-sm-10 u-word">
                    {{title}}
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">发布时间</lable>
                <div class="col-sm-10 u-word" id="createdAt">
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">通知描述</lable>
                <div class="col-sm-10 u-word">
                    {{description}}
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">通知类型</lable>
                <div class="col-sm-10 u-word" id="notify_type">
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">通知状态</lable>
                <div class="col-sm-10 u-word" id="notify_status">
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">通知内容</lable>
                <div class="col-sm-9 u-word u-border">
                    {{{content}}}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <a href="/sys/notify" class="btn btn-default col-sm-4 col-sm-offset-2">返回</a>
                </div>
            </div>
        </form>
    </div>
</div>

{{#extend "scripts"}}
    <!-- 实例化编辑器 -->
    <script type="text/javascript">
        $(function () {
            var statusSt = ['未发布', '已发布', '关闭'];
            $('#notify_status').html(statusSt['{{status}}']);
            $('#notify_type').html(notifyType['{{type}}']);
            $('#createdAt').html(my.toDateString('{{createdAt}}'));
        });
    </script>

{{/extend}}