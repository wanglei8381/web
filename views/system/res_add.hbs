<link href="/umeditor/themes/default/css/umeditor.min.css" type="text/css" rel="stylesheet">
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-7">
                <h4>资源上传</h4>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <input type="hidden" name="id" value="{{_id}}"/>
            <div class="form-group">
                <lable class="col-sm-2 control-label">资源名称</lable>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="name" value="{{name}}" placeholder="请输入资源名称"/>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">资源文件</lable>
                <div class="col-sm-6 row">
                    <div class="col-sm-9">
                        <input class="form-control" name="url" placeholder="请选择上传文件" value="{{url}}" type="text"/>
                    </div>
                    <button type="button" class="btn btn-default col-sm-3">
                        上传
                    </button>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">发布范围</lable>
                <div class="col-sm-6">
                    <lable class="radio-inline">
                        <input type="radio" value="0" {{#eq scope 0}}checked{{/eq}} name="scope"/>
                        全校
                    </lable>
                    <lable class="radio-inline">
                        <input type="radio" value="1" {{#eq scope 1}}checked{{/eq}} name="scope"/>
                        院系
                    </lable>
                </div>
            </div>
            <div class="form-group hidden" id="college">
                <lable class="col-sm-2 control-label"></lable>
                <div class="col-sm-6">
                    <lable class="checkbox-inline">
                        <input type="checkbox" value="0" name="collegeIds"/>
                        计算机系
                    </lable>
                    <lable class="checkbox-inline">
                        <input type="checkbox" value="1" name="collegeIds"/>
                        金融院系
                    </lable>
                    <lable class="checkbox-inline">
                        <input type="checkbox" value="2" name="collegeIds"/>
                        等等等
                    </lable>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">资源描述</lable>
                <div class="col-sm-6">
                    <textarea type="text" class="form-control u-height" name="description"
                           placeholder="请输入资源描述">{{description}}</textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <button class="btn btn-default col-sm-4" type="button" id="submit">保存</button>
                    <a href="/sys/res" class="btn btn-default col-sm-4 col-sm-offset-2">取消</a>
                </div>
            </div>
        </form>
    </div>
</div>

{{#extend "scripts"}}

    <script type="text/javascript">
        var id = '{{_id}}';
        var jobSubmit = function () {
            var url = '/sys/res/add';
            if (id) {
                url = '/sys/res/edit';
            }
            my.ajax({
                url: url,
                data: $("form").serialize(),
                success: function (data) {
                    window.location = '/sys/res';
                }
            });
        };

        $('#submit').click(function () {
            jobSubmit();
        });

        $("input[name=scope]").click(function () {
            switch ($("input[name=scope]:checked").attr("value")) {
                case "0":
                    $('#college').addClass('hidden');
                    break;
                case "1":
                    $('#college').removeClass('hidden');
                    break;
                default:
                    break;
            }
        });
    </script>

{{/extend}}