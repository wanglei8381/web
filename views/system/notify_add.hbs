<link href="/umeditor/themes/default/css/umeditor.min.css" type="text/css" rel="stylesheet">

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-7">
                <h4>通知添加</h4>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <lable class="col-sm-2 control-label">通知标题</lable>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="title" placeholder="请输入通知标题"/>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">通知描述</lable>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="description" placeholder="请输入通知描述"/>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">发布范围</lable>
                <div class="col-sm-6">
                    <lable class="radio-inline">
                        <input type="radio" value="1" name="who"/>
                        全校
                    </lable>
                    <lable class="radio-inline">
                        <input type="radio" value="2" name="who"/>
                        院系
                    </lable>
                </div>
            </div>
            <div class="form-group hidden">
                <lable class="col-sm-2 control-label"></lable>
                <div class="col-sm-6">
                    <lable class="checkbox-inline">
                        <input type="checkbox" value="1"/>
                        计算机系
                    </lable>
                    <lable class="checkbox-inline">
                        <input type="checkbox" value="2"/>
                        金融院系
                    </lable>
                    <lable class="checkbox-inline">
                        <input type="checkbox" value="2"/>
                        等等等
                    </lable>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">通知内容</lable>
                <div class="col-sm-8">
                    <script type="text/plain" id="editor" style="width:100%;height:360px;"></script>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <button class="btn btn-default col-sm-3" id="save">保存</button>
                    <button class="btn btn-default col-sm-3 col-sm-offset-1" id="submit">发布</button>
                    <button class="btn btn-default col-sm-3 col-sm-offset-1"><a href="/sys/notify">取消</a></button>
                </div>
            </div>
        </form>
    </div>
</div>

{{#extend "scripts"}}
    <!-- 配置文件 -->
    <script type="text/javascript" src="/umeditor/umeditor.config.js"></script>
    <!-- 编辑器源码文件 -->
    <script type="text/javascript" src="/umeditor/umeditor.min.js"></script>
    <!-- 实例化编辑器 -->
    <script type="text/javascript">
        var URL = '/ueditor/';
        var serverPath = '/server/umeditor/';
        var um = UM.getEditor('editor', {
            imageUrl: 'http://7xobdo.com1.z0.glb.clouddn.com',
            imagePath: serverPath,
            lang: /^zh/.test(navigator.language || navigator.browserLanguage || navigator.userLanguage) ? 'zh-cn' : 'en',
            langPath: UMEDITOR_CONFIG.UMEDITOR_HOME_URL + "lang/",
            focus: true
        });

        $(function () {
        });

        var notifyAdd = function(){
            my.ajax({
                url : '/sys/notify/add',
                data : $("form").serialize(),
                success : function(data) {
                    window.location = '/sys/news';
                }
            });
        };

        $('#submit').click(function(){
            notifyAdd();
        });
    </script>

{{/extend}}