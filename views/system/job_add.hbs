<link href="/umeditor/themes/default/css/umeditor.min.css" type="text/css" rel="stylesheet">
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-7">
                <h4>职位添加</h4>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <input type="hidden" name="id" value="{{_id}}"/>
            <div class="form-group">
                <lable class="col-sm-2 control-label">公司名称</lable>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="companyName" value="{{companyName}}" placeholder="请输入公司名称"/>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">职位名称</lable>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="jobName" value="{{jobName}}"
                           placeholder="请输入职位名称"/>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">工作地点</lable>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="workPlace" value="{{workPlace}}"
                           placeholder="请输入工作地点"/>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">发布范围</lable>
                <div class="col-sm-6">
                    <lable class="radio-inline">
                        <input type="radio" value="0" {{#eq scope 0}}checked{{/eq}} name="scope"/>
                        全校
                    </lable>
                    <lable class="radio-inline">
                        <input type="radio" value="1" {{#eq scope 1}}checked{{/eq}} name="scope"/>
                        院系
                    </lable>
                </div>
            </div>
            <div class="form-group hidden" id="college">
                <lable class="col-sm-2 control-label"></lable>
                <div class="col-sm-6">
                    <lable class="checkbox-inline">
                        <input type="checkbox" value="0" name="collegeIds"/>
                        计算机系
                    </lable>
                    <lable class="checkbox-inline">
                        <input type="checkbox" value="1" name="collegeIds"/>
                        金融院系
                    </lable>
                    <lable class="checkbox-inline">
                        <input type="checkbox" value="2" name="collegeIds"/>
                        等等等
                    </lable>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">职位描述</lable>
                <div class="col-sm-8">
                    <script type="text/plain" name="jobDescription" id="editor" style="width:100%;height:360px;"></script>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <button class="btn btn-default col-sm-4" type="button" id="submit">保存</button>
                    <a href="/sys/job" class="btn btn-default col-sm-4 col-sm-offset-2">取消</a>
                </div>
            </div>
        </form>
    </div>
</div>

{{#extend "scripts"}}

    <!-- 配置文件 -->
    <script type="text/javascript" src="/umeditor/umeditor.config.js"></script>
    <!-- 编辑器源码文件 -->
    <script type="text/javascript" src="/umeditor/umeditor.min.js"></script>
    <!-- 实例化编辑器 -->
    <script type="text/javascript">
        var URL = '/ueditor/';
        var serverPath = '/server/umeditor/';
        var um = UM.getEditor('editor', {
            imageUrl: 'http://7xobdo.com1.z0.glb.clouddn.com',
            imagePath: serverPath,
            lang: /^zh/.test(navigator.language || navigator.browserLanguage || navigator.userLanguage) ? 'zh-cn' : 'en',
            langPath: UMEDITOR_CONFIG.UMEDITOR_HOME_URL + "lang/",
            focus: true
        });

        //初始化数据
        var jobDescription = '{{{jobDescription}}}' || '';
        var id = '{{_id}}';
        um.ready(function () {
            um.setContent(jobDescription);
        });

        var jobSubmit = function () {
            var url = '/sys/job/add';
            if (id) {
                url = '/sys/job/edit';
            }
            my.ajax({
                url: url,
                data: $("form").serialize(),
                success: function (data) {
                    window.location = '/sys/job';
                }
            });
        };

        $('#submit').click(function () {
            jobSubmit();
        });

        $("input[name=scope]").click(function () {
            switch ($("input[name=scope]:checked").attr("value")) {
                case "0":
                    $('#college').addClass('hidden');
                    break;
                case "1":
                    $('#college').removeClass('hidden');
                    break;
                default:
                    break;
            }
        });
    </script>

{{/extend}}