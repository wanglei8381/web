<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-7">
                <h4>职位详情</h4>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <lable class="col-sm-2 control-label">公司名称</lable>
                <div class="col-sm-10 u-word">
                    {{companyName}}
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">发布时间</lable>
                <div class="col-sm-10 u-word createdAt">
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">职位名称</lable>
                <div class="col-sm-10 u-word">
                    {{jobName}}
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">工作地点</lable>
                <div class="col-sm-10 u-word">
                    {{workPlace}}
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">职位描述</lable>
                <div class="col-sm-9 u-word u-border">
                    {{{jobDescription}}}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <a href="/sys/job" class="btn btn-default col-sm-4 col-sm-offset-2">返回</a>
                </div>
            </div>
        </form>
    </div>
</div>

{{#extend "scripts"}}
    <script>
        $('.createdAt').html(my.toDateString('{{createdAt}}'));
    </script>

{{/extend}}