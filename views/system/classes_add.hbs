<link href="/umeditor/themes/default/css/umeditor.min.css" type="text/css" rel="stylesheet">
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-7">
                <h4>班级添加</h4>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <input type="hidden" name="id" value="{{_id}}"/>
            <input type="hidden" name="identity" value="2"/>
            <div class="form-group">
                <lable class="col-sm-2 control-label">班级名称</lable>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="name" value="{{name}}" placeholder="请输入班级名称"/>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">所属院系</lable>
                <div class="col-sm-10 collage">
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">导员工号</lable>
                <div class="col-sm-6">
                    <select class="selectSupervisor form-control">
                        <option value="">请选择辅导员</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <lable class="col-sm-2 control-label">班主任工号</lable>
                <div class="col-sm-6">
                    <select class="selectHeader form-control">
                        <option value="">请选择班主任</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <button class="btn btn-default col-sm-4" type="button" id="submit">保存</button>
                    <a href="/sys/classes" class="btn btn-default col-sm-4 col-sm-offset-2">取消</a>
                </div>
            </div>
        </form>
    </div>
</div>

{{#extend "scripts"}}

    <script type="text/javascript">
        $(function () {
            //初始化数据
            getCollage();
            getSupervisor(0);
            $(".selectSupervisor").select2();
            $(".selectHeader").select2();
        });

        function getCollage(){
            for(var i=0; i<collage.length; i++){
                var str = '<lable class="radio-inline">'+
                        '<input type="radio" value="'+i+'" name="collegeId"/>'+ collage[i] +
                        '</lable>';
                $('.collage').append(str);
                if('{{collegeId}}' == i){
                    $('input[name=collegeId]').attr('checked','checked');
                }
            }
            $("input[name=collegeId]").click(function () {
                var collegeId = $("input[name=collegeId]:checked").attr("value");
                getSupervisor(collegeId)
            });
        }
        function getSupervisor(collegeId){
            var data = {
                collegeId : collegeId,
                checkType:1
            }
            my.ajax({
                url: '/sys/teacher/check',
                data: data,
                success: function (data) {
                    $(".selectSupervisor").empty();
                    for(var i=0; i<data.data.length; i++){
                        var str = '<option value="'+data.data[i].stid+'">'+data.data[i].name+'</option>';
                        $(".selectSupervisor").append(str);
                        $(".selectHeader").append(str);
                    }
                }
            });
        }

        var id = '{{_id}}';
        var gradeSubmit = function () {
            var url = '/sys/classes/add';
            if (id) {
                url = '/sys/classes/edit';
            }
            my.ajax({
                url: url,
                data: $("form").serialize(),
                success: function (data) {
                    window.location = '/sys/classes';
                }
            });
        };

        $('#submit').click(function () {
            gradeSubmit();
        });
    </script>

{{/extend}}