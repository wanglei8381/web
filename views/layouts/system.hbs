    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>学生信息管理平台</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/select2.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/sys/dashboard.css" rel="stylesheet">
    <link href="/sys/common.css" rel="stylesheet">
    <link href="/sys/bootbox.css" rel="stylesheet">
</head>

<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">学生信息管理平台</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#">当前用户: 【{{sys_user.name}}】</a></li>
                <li class="user"><a href="javascript:my.repwd();">【修改密码】</a></li>
                <li><a href="/sys/logout">退出</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid">

    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li id="student_id" class="user"><a href="/sys/student">学生管理</a></li>
                <li id="teacher_id" class="admin hidden"><a href="/sys/teacher">教师管理</a></li>
                <li id="classes_id" class="user"><a href="/sys/classes">班级管理</a></li>
                <li id="news_id" class="user"><a href="/sys/news">新闻管理</a></li>
                <li id="notify_id" class="user"><a href="/sys/notify">通知管理</a></li>
                <li id="job_id" class="user"><a href="/sys/job">招聘管理</a></li>
                <li id="res_id" class="user"><a href="/sys/res">资源管理</a></li>
            </ul>
        </div>

        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            {{{body}}}
        </div>
    </div>
</div>

<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/select2.min.js"></script>
<script src="/sys/bootbox.js"></script>
<script src="/sys/common.js"></script>
<script>
    $(function () {
        var path_module = location.pathname.substr(5);
        if (path_module) {
            var index = path_module.indexOf('/');
            if (index > -1) {
                path_module = path_module.substring(0, index);
            }
            $('#' + path_module + '_id').addClass('active');
        }

        if('{{sys_user.stid}}' == 'admin'){
            $('.user').addClass('hidden');
            $('.admin').removeClass('hidden');
        }

    });
</script>
{{{block "scripts"}}}
</body>
</html>
